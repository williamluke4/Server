<div class="container col-xs-12 col-md-8 col-md-offset-2 " id="add">
    <h2>Add Switch</h2>
    <form class="form-horizontal" role="form" action="/create" method="post">
        <div class="form-group">
            <label class="control-label col-sm-2" for="elementID">Element ID:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="elementID" name="elementID" placeholder="Enter Element ID">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="dataID">Data ID:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="dataID" name="dataID" placeholder="Enter Data ID">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="group">Group:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="group" name="group" placeholder="Enter Group">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button id="submitbtn" type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    </form>
    <button id="close" onclick="$('#add').slideToggle( 'slow' );" class="btn btn-default glyphicon glyphicon-remove"></button>

</div>
